<div class="container">
  <div class="row bg-white rounded shadow mt-5 p-3">
    <div class="col-12 col-lg-6">
      <div class="text-center">
        <%= cl_image_tag @cocktail.photo, width:"auto", crop: "scale", class:"cloudinary-image", dpr: "auto", client_hints: true %>
        <ul class="list-group my-3">
          <% @cocktail.doses.each do |dose|%>
          <li class="list-group-item d-flex justify-content-between align-items-center show-delete">
            <div>
            <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: 'delete' do %>
            <i class="fas fa-times-circle delete-in-card"></i>
            <% end %>
            </div>
            <span class="badge badge-dark badge-pill"><%= dose.description %></span></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div>
        <h2><%= @cocktail.name %></h2>
        <h5>Enter ingredients for your cocktail:</h5>
        <%= simple_form_for [@cocktail, @dose]  do |f| %>
          <%= f.input :description, :label => 'Quantity' %>
          <%= f.association :ingredient, collection: Ingredient.all %>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to cocktails_path do %>
              <i class="fa fa-chevron-circle-left"></i> Go back
            <% end %>
            <%= f.button :submit, "Add", class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

