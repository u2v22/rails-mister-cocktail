<%= link_to 'Back to all cocktails', cocktails_path, class: 'btn btn-primary' %>

<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose|%>
  <li><%= dose.description %> <%= dose.ingredient.name %></li>
  <% end %>
</ul>

<h1>Enter ingredients here</h1>

<%= simple_form_for [@cocktail, @dose]  do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

