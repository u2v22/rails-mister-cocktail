<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 bg-white rounded-lg shadow mt-5 p-3">
      <h2 class="text-center">Add a cocktail!</h2>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="d-flex justify-content-center">
      <%= f.button :submit, 'Add this cocktail', id: "select-cocktail-from-list", class: "btn btn-lg btn-outline-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
