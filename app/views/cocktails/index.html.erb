<h1>Cocktails</h1>
<ul>
  <% @cocktails.each do |cocktail| %>
  <li><%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
  <%= link_to cocktail.name, cocktail_path(cocktail.id), class: 'btn btn-primary' %></li>
  <%= link_to 'Delete cocktail', cocktail_path(cocktail), method: 'delete', class: 'btn btn-primary'  %>
  <% end %>
</ul>


<%= link_to '+ Create new cocktail', new_cocktail_path, class: 'btn btn-primary' %>
